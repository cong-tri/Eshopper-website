                     document.addEventListener('DOMContentLoaded', () => {
            const appWrapper = document.querySelector('.app-wrapper');
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            document.getElementById('input').checked = isDarkMode;
            appWrapper.setAttribute('data-bs-theme', isDarkMode ? 'dark' : 'light');
        });

        function myFunction() {
            const appWrapper = document.querySelector('.app-wrapper');
            const isChecked = document.getElementById('input').checked;
            localStorage.setItem('darkMode', isChecked);
            appWrapper.setAttribute('data-bs-theme', isChecked ? 'dark' : 'light');
        }
    </script>
    
