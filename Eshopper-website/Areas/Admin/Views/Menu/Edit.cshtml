@model Eshopper_website.Models.Menu

@{
    ViewData["Title"] = "Create";
}
<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm">
                <h3 class="mb-0">Menu</h3>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-md"><h3 class="card-title">Edit Menu</h3></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" asp-controller="Coupon" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MEN_ID" />
                            <div class="form-group mb-3">
                                <div class="row align-items-center">
                                    <div class="col-sm-3">
                                        <label asp-for="PARENT_ID" class="control-label"></label>
                                    </div>
                                    <div class="col-sm">
                                        <input asp-for="PARENT_ID" class="form-control w-100" />
                                        <span asp-validation-for="PARENT_ID" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row align-items-center">
                                    <div class="col-sm-3">
                                        <label asp-for="MEN_Title" class="control-label"></label>
                                    </div>
                                    <div class="col-sm">
                                        <input asp-for="MEN_Title" class="form-control" />
                                        <span asp-validation-for="MEN_Title" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row align-items-center">
                                    <div class="col-sm-3">
                                        <label asp-for="MEN_DisplayOrder" class="control-label"></label>
                                    </div>
                                    <div class="col-sm">
                                        <input asp-for="MEN_DisplayOrder" class="form-control" />
                                        <span asp-validation-for="MEN_DisplayOrder" class=" text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="row align-items-center">
                                    <div class="col-sm-3">
                                        <label asp-for="MEN_Icon" class="control-label"></label>
                                    </div>
                                    <div class="col-sm">
                                        <input asp-for="MEN_Icon" class="form-control" />
                                        <span asp-validation-for="MEN_Icon" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary w-100" />
                            </div>
                            <div class="card-footer">
                                <a class="text-success" role="button" asp-action="Index"><i class="fa-solid fa-right-to-bracket"></i> <span class="ms-2">Back to List</span></a>
                            </div>
                        </form>
                    </div> <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
