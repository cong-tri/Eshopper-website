@model Eshopper_website.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<h1>Article Details</h1>

<div class="border p-4 rounded shadow-sm">
    <h4>Article Information</h4>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_Title)</th>
                    <td>@Html.DisplayFor(model => model.BLG_Title)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_Slug)</th>
                    <td>@Html.DisplayFor(model => model.BLG_Slug)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_Content)</th>
                    <td>@Html.DisplayFor(model => model.BLG_Content)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_Image)</th>
                    <td>
                        <img src="~/images/blog/@Model.BLG_Image" width="400px" alt="@Model.BLG_Title" class="" />
                    </td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_AuthorName)</th>
                    <td>@Html.DisplayFor(model => model.BLG_AuthorName)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_PublishedAt)</th>
                    <td>@Html.DisplayFor(model => model.BLG_PublishedAt)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BLG_Status)</th>
                    <td>@Html.DisplayFor(model => model.BLG_Status)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                    <td>@Html.DisplayFor(model => model.CreatedDate)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UpdatedDate)</th>
                    <td>@Html.DisplayFor(model => model.UpdatedDate)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UpdatedBy)</th>
                    <td>@Html.DisplayFor(model => model.UpdatedBy)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.BLG_ID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
</div>
