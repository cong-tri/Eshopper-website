@model Eshopper_website.Models.Product

@{
    ViewData["Title"] = "Product";
}

@section Headers {
    <link rel="stylesheet" href="~/lib/ckeditor5/ckeditor5.css" />
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm">
                <h3 class="mb-0">Product</h3>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row align-items-center mb-4">
                            <div class="col-md"><h3 class="card-title">Create Product</h3></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="CAT_ID" class="form-label"></label>
                                </div>
                                <div class="col">
                                    <select asp-for="CAT_ID" class="form-select" asp-items="ViewBag.CAT_ID"></select>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="BRA_ID" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <select asp-for="BRA_ID" class="form-select" asp-items="ViewBag.BRA_ID"></select>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Name" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="PRO_Name" class="form-control" maxlength="50"/>
                                    <span asp-validation-for="PRO_Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Description" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <textarea asp-for="PRO_Description" class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="PRO_Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Slug" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="PRO_Slug" class="form-control" />
                                    <span asp-validation-for="PRO_Slug" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Price" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="PRO_Price" pattern="[0-9.,]+" class="form-control typing-price" maxlength="7" data-price-display="price-display-sale" />
                                    <span asp-validation-for="PRO_Price" class="text-danger"></span>
                                    <div id="price-display-sale" class="text-muted mt-1"></div>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Image" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="PRO_Image" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="PRO_Image" class="text-danger"></span>
                                    <div class="w-100 mt-3">
                                        <img width="200px" id="imgReview" alt="Alternate Text" />
                                    </div>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Quantity" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="PRO_Quantity" type="number" class="form-control" min="1" max="200" maxlength="3" />
                                    <span asp-validation-for="PRO_Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_Status" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <select asp-for="PRO_Status" class="form-select" asp-items="ViewBag.ProductStatus"></select>
                                    <span asp-validation-for="PRO_Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <div class="col-3">
                                    <label asp-for="PRO_CapitalPrice" class="control-label"></label>
                                </div>
                                <div class="col">
                                    <input asp-for="PRO_CapitalPrice" pattern="[0-9.,]+" type="number" max="500000" class="form-control typing-price" maxlength="6" data-price-display="price-display-capital" />
                                    <span asp-validation-for="PRO_CapitalPrice" class="text-danger"></span>
                                    <div id="price-display-capital" class="text-muted mt-1"></div>
                                </div>
                            </div>
                            <div class="row align-items-center mb-4">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div> <!-- /.card-body -->
                    <div class="card-footer">
                        <a class="text-success" role="button" asp-action="Index"><i class="fa-solid fa-right-to-bracket"></i> <span class="ms-2">Back to List</span></a>
                    </div>
                </div> <!-- /.card -->
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div>
<!--end::App Content-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "/lib/ckeditor5/ckeditor5.js",
                "ckeditor5/": "/lib/ckeditor5/"
            }
        }
    </script>
    <script type="module">
        import {
            ClassicEditor,
            Essentials,
            Paragraph,
            Bold,
            Italic,
            Font,
            Underline,
            Alignment
        } from 'ckeditor5';

        ClassicEditor
            .create(document.querySelector('#PRO_Description'), {
                plugins: [Essentials, Paragraph, Bold, Italic, Font, Underline, Alignment],
                toolbar: [
                    'undo', 'redo', '|', 'bold', 'italic', '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor', '|',
                    'underline', 'alignment'
                ]
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error(error);
            });
    </script>

    <script>
        window.onload = () => {
            document.getElementById("PRO_Image").onchange = (e) => {
                var preview = document.getElementById("imgReview");
                var file = e.target.files[0];
                var reader = new FileReader();

                reader.onloadend = function () {
                    preview.src = reader.result;
                }

                if (file) {
                    reader.readAsDataURL(file);
                } else {
                    preview.src = '';
                }
            }
        }
    </script>
   <script>
    $(".typing-price").on("keyup", function () {
        var currency_input = $(this).val();
        var displayElement = $("#" + $(this).data("price-display"));

        if (!isNaN(currency_input) && currency_input.trim() !== "") {
            try {
                var numericValue = Number(currency_input);
                if (numericValue >= 0) {
                    var formattedPrice = new Intl.NumberFormat('vi-VN', { 
                        style: 'currency', 
                        currency: 'VND' 
                    }).format(numericValue);
                    displayElement.html(formattedPrice);
                } else {
                    displayElement.html("Please enter a valid positive number");
                }
            } catch (error) {
                displayElement.html("Invalid number format");
            }
        } else {
            displayElement.html("");
        }
    });
</script>
}
