@* @model Account; *@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>AdminLTE 4 | Login Page v2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="AdminLTE 4 | Login Page v2">
    <meta name="author" content="ColorlibHQ">
    <meta name="description" content="AdminLTE is a Free Bootstrap 5 Admin Dashboard, 30 example pages using Vanilla JS.">
    <meta name="keywords" content="bootstrap 5, bootstrap, bootstrap 5 admin dashboard, bootstrap 5 dashboard, bootstrap 5 charts, bootstrap 5 calendar, bootstrap 5 datepicker, bootstrap 5 tables, bootstrap 5 datatable, vanilla js datatable, colorlibhq, colorlibhq dashboard, colorlibhq admin dashboard">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css" />
    <link rel="stylesheet" href="~/admin/plugins/overlayscrollbars/styles/overlayscrollbars.min.css" />
    <link rel="stylesheet" href="~/admin/plugins/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/admin/plugins/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/admin/css/adminlte.css" />
    <link rel="stylesheet" href="~/admin/css/custom.css" />
    <style>
        .form-control:focus {
            box-shadow: none;
            border: 2px solid blue
        }

        .validate {
            border-radius: 20px;
            height: 40px;
            background-color: green;
            border: 1px solid green;
            width: 140px
        }
    </style>
</head>
<body class="login-page bg-body-secondary">
    <div class="login-box" style="width: 450px">
        <div class="card card-outline card-success">
            <div class="card-header">
                <a href="#" class="link-dark text-center link-offset-2 link-opacity-100 link-opacity-50-hover">
                    <h1 class="mb-0"> <b>Admin</b> EShopper</h1>
                </a>
            </div>
            <div class="card-body rounded">
                <div class="container height-100 d-flex justify-content-center align-items-center">
                    <div class="position-relative"> 
                        <div class="p-2 text-center"> 
                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-danger">@ViewData["Message"]</div>
                            }
                            <form asp-action="ConfirmOTP" asp-controller="User" asp-area="Admin" method="post">
                                @* @Html.AntiForgeryToken() *@
                                <div class="form-group mb-3">
                                    <label for="otp">
                                        <h4>Please enter the one time password <br> to verify your account</h4>
                                        <div>
                                            <span>A code has been sent to</span> <small>@ViewData["EmailReiceive"]</small>
                                        </div>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="otp"
                                           name="otp"
                                           pattern="[0-9]{6}"
                                           maxlength="6"
                                           minlength="6"
                                           inputmode="numeric"
                                           placeholder="Enter 6-digit code"
                                           required />
                                </div>
                                <button type="submit" class="btn btn-primary">Verify OTP</button>
                                <button type="button" class="btn btn-primary">Resend OTP</button>
                            </form>
                        </div> 
                    </div>
                </div>
            </div> <!-- /.login-card-body -->

        </div>
    </div> <!-- /.login-box -->
    <script src="~/admin/plugins/overlayscrollbars/browser/overlayscrollbars.browser.es6.min.js"></script>
    <script src="~/admin/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/js/adminlte.js"></script>
    <script src="~/admin/plugins/jquery/jquery-3.7.1.min.js"></script>
    <script>
        document.getElementById('otp').addEventListener('input', function (e) {
            // Remove any non-digit characters
            this.value = this.value.replace(/[^0-9]/g, '');

            // Limit to 6 digits
            if (this.value.length > 6) {
                this.value = this.value.slice(0, 6);
            }
        });
    </script>
</body>
</html>
