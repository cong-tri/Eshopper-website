@using Eshopper_website.Utils.Enum
@model IEnumerable<Eshopper_website.Models.Payment>

@{
    ViewData["Title"] = "Payment";
    ViewData["Active"] = "Payment";
}

<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm">
                <h3 class="mb-0">Payments</h3>
            </div>
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div>
<!--end::App Content Header-->

<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-md"><h3 class="card-title">List Payment</h3></div>
                            <div class="col-md-auto">
                                <a asp-action="Create" id="btnAdd" role="button" class="btn btn-success">
                                    <i class="fas fa-plus me-1"></i> Add new
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbl" class="table table-hover table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PAY_Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PAY_Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PAY_Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UpdatedDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UpdatedBy)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PAY_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PAY_Description)
                                            </td>
                                            <td>
                                                <span class="badge @(item.PAY_Status == PaymentStatusEnum.Active ? "bg-success" :
                                                               item.PAY_Status == PaymentStatusEnum.Inactive ? "bg-danger" : "bg-warning")">
                                                    @item.PAY_Status
                                                </span>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedBy)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UpdatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UpdatedBy)
                                            </td>
                                            <td class="text-nowrap">
                                                <a class="me-1 text-success" asp-action="Edit" asp-route-id="@item.PAY_ID" title="Edit">
                                                    <i class="fa-regular fa-pen-to-square"></i>
                                                </a>
                                                <a class="me-1 text-primary" asp-action="Details" asp-route-id="@item.PAY_ID" title="View Details">
                                                    <i class="fa-regular fa-circle-info"></i>
                                                </a>
                                                <a class="me-1 text-danger" asp-action="Delete" asp-route-id="@item.PAY_ID" title="Delete">
                                                    <i class="fa-regular fa-trash-xmark"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div> <!-- /.card-body -->
                    </div> <!-- /.card -->
                </div>
            </div> <!--end::Row-->
        </div> <!--end::Container-->
    </div>
    <!--end::App Content-->

