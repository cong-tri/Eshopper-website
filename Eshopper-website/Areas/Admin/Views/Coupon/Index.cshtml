                                                <rect width="28.0702" height="28.0702" fill="white" transform="translate(0.403503 0.526367)"></rect>
                                            </clipPath>
                                        </defs>
                                    </svg>

                                </button>
                            </div>
                            <div class="col-md-auto">
                                <a asp-action="Create" id="btnAdd" role="button" class="btn btn-success"><i class="fa-light fa-add me-1"></i>Add new</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbl" class="table table-hover table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.COUP_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.COUP_Description)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.COUP_Status)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.COUP_Quantity)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.COUP_DateStart)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.COUP_DateExpire)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COUP_Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COUP_Description)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COUP_Status)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COUP_Quantity)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COUP_DateStart)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COUP_DateExpire)
                                                    </td>
                                                    <td class="text-nowrap">
                                                        <a class="me-1 text-success" asp-action="Edit" asp-route-id="@item.COUP_ID"><i class="fa-regular fa-pen-to-square"></i></a> |
                                                        <a class="me-1 text-primary" asp-action="Details" asp-route-id="@item.COUP_ID"><i class="fa-regular fa-circle-info"></i></a> |
                                                        <a class="me-1 text-danger" asp-action="Delete" asp-route-id="@item.COUP_ID"><i class="fa-regular fa-trash-xmark"></i></a>
                                                    </td>
                                                </tr>
                                        }
                                    </tbody>
                                
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    // Hàm tìm kiếm
    function searchTable() {
        var searchValue = document.getElementById("searchInput").value.trim().toLowerCase();
        var rows = document.querySelectorAll("#tbl tbody tr");

        rows.forEach(function (row) {
            var nameColumn = row.querySelector("td:nth-child(1)");
            if (nameColumn) {
                var nameText = nameColumn.textContent.trim().toLowerCase();
                if (nameText.includes(searchValue)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            }
        });
    }

    // Lắng nghe sự kiện "keyup" trên ô nhập
    document.getElementById("searchInput").addEventListener("keyup", searchTable);

    // Lắng nghe sự kiện "click" trên nút bấm
    document.querySelector(".searchButton").addEventListener("click", searchTable);
</script>


