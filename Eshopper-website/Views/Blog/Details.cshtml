@model Eshopper_website.Models.Blog
@{
    ViewData["Title"] = Model.BLG_Title;
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="blog-post-area">
                    <h2 class="title text-center">@Model.BLG_Title</h2>
                    <div class="single-blog-post">
                        <div class="post-meta">
                            <ul>
                                <li><i class="fa fa-user"></i> @Model.BLG_AuthorName</li>
                                <li><i class="fa fa-clock-o"></i> @Model.BLG_PublishedAt.ToString("HH:mm")</li>
                                <li><i class="fa fa-calendar"></i> @Model.BLG_PublishedAt.ToString("dd MMM yyyy")</li>
                            </ul>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.BLG_Image))
                        {
                            <img class="img-responsive" src="~/images/blog/@Model.BLG_Image" alt="@Model.BLG_Title">
                        }
                        <div class="blog-content">
                            @Html.Raw(Model.BLG_Content)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 