@using Eshopper_website.Utils.Enum.Order
@model Eshopper_website.Models.OrderViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fas fa-check-circle me-2"></i>Đặt hàng thành công!</h4>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <h5>Cảm ơn bạn đã đặt hàng!</h5>
                <p>Mã đơn hàng của bạn là: <strong>@Model.OrderCode</strong></p>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Thông tin đơn hàng</h5>
                    <table class="table">
                        <tr>
                            <td>Mã đơn hàng:</td>
                            <td>@Model.OrderCode</td>
                        </tr>
                        <tr>
                            <td>Ngày đặt hàng:</td>
                            <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td>Tổng tiền:</td>
                            <td>@Model.TotalAmount.ToString("N0") VNĐ</td>
                        </tr>
                        <tr>
                            <td>Trạng thái:</td>
                            <td>
                                @switch (Model.Status)
                                {
                                    case OrderStatusEnum.Processing:
                                        <span class="badge bg-primary">Đang xử lý</span>
                                        break;
                                    case OrderStatusEnum.Completed:
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case OrderStatusEnum.Failed:
                                        <span class="badge bg-danger">Thất bại</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@Model.Status</span>
                                        break;
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Phương thức thanh toán:</td>
                            <td>
                                @switch (Model.PaymentMethod)
                                {
                                    case OrderPaymentMethodEnum.VNPay:
                                        <span><i class="fas fa-credit-card me-1"></i>VNPay</span>
                                        break;
                                    case OrderPaymentMethodEnum.Momo:
                                        <span><i class="fas fa-wallet me-1"></i>Momo</span>
                                        break;
                                    case OrderPaymentMethodEnum.COD:
                                        <span><i class="fas fa-money-bill me-1"></i>Thanh toán khi nhận hàng</span>
                                        break;
                                    default:
                                        <span>@Model.PaymentMethod</span>
                                        break;
                                }
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>Chi tiết đơn hàng</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.ToString("N0") VNĐ</td>
                                    <td>@item.SubTotal.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
                <a href="@Url.Action("Index", "Account")" class="btn btn-info ms-2">
                    <i class="fas fa-list me-2"></i>Xem đơn hàng
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Thành công!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
                </text>
            }
        });
    </script>
} 