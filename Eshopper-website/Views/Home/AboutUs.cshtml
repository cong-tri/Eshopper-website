@{
    ViewData["Title"] = "About Us";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="about-page">
                    <h2 class="title text-center">About Us</h2>

                    <!-- Company Introduction -->
                    <div class="about-section">
                        <div class="row">
                            <div class="col-sm-6">
                                <img src="~/images/home/logo.png" alt="Company" class="img-responsive" />
                            </div>
                            <div class="col-sm-6">
                                <h3>Welcome to E-Shopper</h3>
                                <p>
                                    E-Shopper is one of the leading online retailers specializing in high-quality technology products.
                                    We take pride in providing our customers with the best shopping experience, offering a wide range
                                    of products from trusted global brands.
                                </p>
                                <p>
                                    With over 10 years of experience in e-commerce, we are committed to providing our customers with:
                                </p>
                                <ul class="about-list">
                                    <li><i class="fa fa-check"></i> 100% Genuine Products</li>
                                    <li><i class="fa fa-check"></i> Competitive Prices</li>
                                    <li><i class="fa fa-check"></i> Dedicated Customer Service</li>
                                    <li><i class="fa fa-check"></i> Reliable Warranty Service</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Our Mission -->
                    <div class="mission-section">
                        <div class="row">
                            <div class="col-sm-12">
                                <h3 class="text-center">Our Mission</h3>
                                <div class="mission-content">
                                    <div class="col-sm-4">
                                        <div class="mission-box">
                                            <i class="fa fa-heart"></i>
                                            <h4>Quality</h4>
                                            <p>Committed to providing high-quality products that meet all customer needs.</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="mission-box">
                                            <i class="fa fa-star"></i>
                                            <h4>Service</h4>
                                            <p>Delivering an excellent online shopping experience with professional service.</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="mission-box">
                                            <i class="fa fa-shield"></i>
                                            <h4>Trust</h4>
                                            <p>Building customer trust through transparency and responsibility.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Our Team -->
                    <div class="team-section">
                        <h3 class="text-center">Our Team</h3>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="team-member">
                                    <img src="~/images/about/team1.jpg" alt="Team Member" />
                                    <h4>John Doe</h4>
                                    <p>CEO & Founder</p>
                                    <div class="social-icons">
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                        <a href="#"><i class="fa fa-linkedin"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="team-member">
                                    <img src="~/images/about/team2.jpg" alt="Team Member" />
                                    <h4>Jane Smith</h4>
                                    <p>Marketing Director</p>
                                    <div class="social-icons">
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                        <a href="#"><i class="fa fa-linkedin"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="team-member">
                                    <img src="~/images/about/team3.jpg" alt="Team Member" />
                                    <h4>Mike Johnson</h4>
                                    <p>Technical Lead</p>
                                    <div class="social-icons">
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                        <a href="#"><i class="fa fa-linkedin"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="contact-section">
                        <div class="row">
                            <div class="col-sm-12">
                                <h3 class="text-center">Contact Us</h3>
                                <div class="contact-info">
                                    <div class="col-sm-4">
                                        <div class="contact-box">
                                            <i class="fa fa-map-marker"></i>
                                            <h4>Address</h4>
                                            <p>123 E-Shopper Street, Digital City, Tech Country</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="contact-box">
                                            <i class="fa fa-phone"></i>
                                            <h4>Phone</h4>
                                            <p>+1 234 567 8900</p>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="contact-box">
                                            <i class="fa fa-envelope"></i>
                                            <h4>Email</h4>
                                            <p>info@eshopper.com</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* About Page Styles */
    .about-page {
        padding: 40px 0;
    }

    .about-section {
        margin-bottom: 50px;
    }

    .about-section h3 {
        color: #FE980F;
        margin-bottom: 20px;
    }

    .about-list {
        list-style: none;
        padding: 0;
    }

    .about-list li {
        margin-bottom: 10px;
    }

    .about-list i {
        color: #FE980F;
        margin-right: 10px;
    }

    /* Mission Section */
    .mission-section {
        background-color: #f8f8f8;
        padding: 50px 0;
        margin-bottom: 50px;
    }

    .mission-box {
        text-align: center;
        padding: 20px;
        margin-bottom: 30px;
        transition: all 0.3s ease;
    }

    .mission-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .mission-box i {
        font-size: 40px;
        color: #FE980F;
        margin-bottom: 20px;
    }

    .mission-box h4 {
        color: #333;
        margin-bottom: 15px;
    }

    /* Team Section */
    .team-section {
        margin-bottom: 50px;
    }

    .team-member {
        text-align: center;
        margin-bottom: 30px;
        transition: all 0.3s ease;
    }

    .team-member:hover {
        transform: translateY(-5px);
    }

    .team-member img {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin-bottom: 15px;
        transition: all 0.3s ease;
    }

    .team-member:hover img {
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .team-member h4 {
        color: #333;
        margin-bottom: 5px;
    }

    .team-member p {
        color: #FE980F;
        margin-bottom: 15px;
    }

    .social-icons a {
        display: inline-block;
        width: 35px;
        height: 35px;
        line-height: 35px;
        background-color: #f8f8f8;
        color: #FE980F;
        border-radius: 50%;
        margin: 0 5px;
        transition: all 0.3s ease;
    }

    .social-icons a:hover {
        background-color: #FE980F;
        color: #fff;
        transform: translateY(-2px);
    }

    /* Contact Section */
    .contact-section {
        background-color: #f8f8f8;
        padding: 50px 0;
    }

    .contact-box {
        text-align: center;
        padding: 30px;
        transition: all 0.3s ease;
    }

    .contact-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .contact-box i {
        font-size: 40px;
        color: #FE980F;
        margin-bottom: 20px;
    }

    .contact-box h4 {
        color: #333;
        margin-bottom: 15px;
    }

    .contact-box p {
        color: #666;
    }
</style>