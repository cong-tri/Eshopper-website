@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home";
}
<partial name="_SliderPartial" />
<section>
	<div class="row">
        <div class="col-sm-3">
            @Html.Partial("_SidebarPartial")
        </div>

        <div class="col-sm-9 padding-right">
            <div class="features_items">
                <!--features_items-->
                <h2 class="title text-center">Features Items</h2>
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">

                            <a>
                                <div class="single-products">

                                    <div class="productinfo text-center">
                                        <a asp-action="Details" asp-controller="Product" asp-route-Id="@item?.PRO_ID">
                                            <img src="~/images/product-details/@item?.PRO_Image" alt="@item?.PRO_Name" width="100%" />
                                            <h2>@item?.PRO_Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</h2>
                                            <p>@item?.PRO_Name</p>
                                            <p>Danh mục : @item?.Category?.CAT_Name </p>
                                            <p>Thương hiệu : @item?.Brand?.BRA_Name</p>
                                            <a asp-action="Add" asp-controller="Cart" asp-route-id="@item?.PRO_ID" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        </a>
                                    </div>
                                    @* <div class="product-overlay">
								<div class="overlay-content">
									<h2>$56</h2>
									<p>Easy Polo Black Edition</p>
									<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
								</div>
							</div> *@
                                </div>
                            </a>
                            <div class="product-actions">
                                <form asp-controller="Wishlist" asp-action="AddToWishlist" method="post" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item?.PRO_ID" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                    <button type="submit" class="btn action-btn wishlist-btn">
                                        <i class="fa fa-heart"></i> Add to Wishlist
                                    </button>
                                </form>
                                <form asp-controller="Compare" asp-action="AddToCompare" method="post" style="display: inline;">
                                    <input type="hidden" name="productId" value="@item?.PRO_ID" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                    <button type="submit" class="btn action-btn compare-btn">
                                        <i class="fa fa-exchange"></i> Add to Compare
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div><!--features_items-->
        </div>
	</div>
</section>
<style>
.product-actions {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin: 10px 0;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 6px 12px;
    border-radius: 4px;
    background: #fff;
    color: #666;
    border: 1px solid #ddd;
    font-size: 13px;
    transition: all 0.2s ease;
}

.action-btn:hover {
    color: #FE980F;
    border-color: #FE980F;
}

.action-btn i {
    font-size: 13px;
}
</style>