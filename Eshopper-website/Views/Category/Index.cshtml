@model IEnumerable<Product>
@{
	ViewData["Title"] = "Category";
	var culture = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<section>
	<div class="row">
		<div class="col-sm-3">
			@Html.Partial("_SidebarPartial")
		</div>

		<div class="col-sm-9 padding-right">
			<div class="features_items">
				<!--features_items-->
				<h2 class="title text-center">Features Items</h2>
				@foreach (var item in Model)
				{
					<div class="col-sm-4">
						<div class="product-image-wrapper">
							<div class="single-products">
								<div class="productinfo text-center">
									<a asp-action="Details" asp-controller="Product" asp-route-Id="@item?.PRO_ID">
										<img src="~/images/product-details/@item.PRO_Image" alt="@item.PRO_Name" width="100%" />
										@{
											var price = item?.PRO_Price ?? 0;
											var formattedPrice = price.ToString("C0", culture);
										}
										<h2>@formattedPrice</h2>
										<p>@item?.PRO_Name</p>
										<p>Category: @item?.Category?.CAT_Name </p>
										<p>Brand: @item?.Brand?.BRA_Name</p>
									</a>
									<a asp-action="Add" asp-controller="Cart" asp-route-id="@item?.PRO_ID" class="btn btn-default add-to-cart">
										<i class="fa fa-shopping-cart"></i>Add to cart
									</a>
								</div>
							</div>
							<div class="choose">
								<ul class="nav nav-pills nav-justified">
									<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
									<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
								</ul>
							</div>
						</div>
					</div>
				}
			</div><!--features_items-->
		</div>
	</div>
</section>

