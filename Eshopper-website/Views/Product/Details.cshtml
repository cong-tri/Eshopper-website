@model IEnumerable<Product>

@{
    ViewData["Title"] = "Detail Product";

    var detail = ViewData["productsById"] as Product;

	var products = ViewData["products"] as List<Product>;
}
<section>
    <div class="row">
        <div class="col-sm-3">
            @Html.Partial("_SidebarPartial")
        </div>

        <div class="col-sm-9 padding-right">
            <div class="product-details">
                <!--product-details-->
                <div class="col-sm-5">
                    <div class="view-product">
                        <img src="~/images/product-details/@detail?.PRO_Image" alt="" />
                        <h3>ZOOM</h3>
                    </div>
                    <div id="similar-product" class="carousel slide" data-ride="carousel">

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <a href=""><img src="https://anphat.com.vn/media/product/37431_asus_rog_strix_g17_g713qm_k4113t_r7_5800h_197c27cd1bce4217baedb68f8353d1c5_master.png" width="80px" height="100px" alt=""></a>
                                <a href=""><img src="https://anphat.com.vn/media/product/37431_asus_rog_strix_g17_g713qm_k4113t_r7_5800h_197c27cd1bce4217baedb68f8353d1c5_master.png" width="80px" height="100px" alt=""></a>
                                <a href=""><img src="https://anphat.com.vn/media/product/37431_asus_rog_strix_g17_g713qm_k4113t_r7_5800h_197c27cd1bce4217baedb68f8353d1c5_master.png" width="80px" height="100px" alt=""></a>
                            </div>
                        </div>

                        <!-- Controls -->
                        <a class="left item-control" href="#similar-product" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="right item-control" href="#similar-product" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
                <div class="col-sm-7">
                    <div class="product-information">
                        <!--/product-information-->
                        <h2>@detail?.PRO_Name</h2>
                        <span>
                            <span> @detail?.PRO_Price $</span>
                            <label>Quantity: 1</label>
                            <input type="number" value="1" />
                            @if (detail?.PRO_Quantity > 0)
                            {
                                <a class="btn btn-fefault cart" asp-action="Add" asp-controller="Cart" asp-route-id="@detail?.PRO_ID">
                                    <i class="fa fa-shopping-cart"></i>
                                    Add to cart
                                </a>
                            }
                            else
                            {
                                <button type="button" disabled class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Out of Stock</button>
                            }
                        </span>
                        <p><b>Availability:</b> @detail?.PRO_Status</p>
                        <p><b>Quantities in Stock:</b> @detail?.PRO_Quantity</p>
                        <p><b>Condition:</b> New</p>
                        <p><b>Brand:</b> @detail?.Brand?.BRA_Name</p>
                        <p><b>Category:</b> @detail?.Category?.CAT_Name</p>
                        <a href=""><img src="images/product-details/share.png" class="share img-responsive" alt="" /></a>
                    </div><!--/product-information-->
                </div>
            </div><!--/product-details-->

            <div class="category-tab shop-details-tab">
                <!--category-tab-->
                <div class="col-sm-12">
                    <ul class="nav nav-tabs">
