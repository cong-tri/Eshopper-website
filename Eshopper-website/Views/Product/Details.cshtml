                    <div class="tab-pane fade active in" id="reviews">
                        <div class="col-sm-12">
                            <p><b>Write Your Review</b></p>

                            <form id="reviewForm" autocomplete="off" asp-action="CommentProduct" asp-controller="Product" method="post">
                                <input asp-for="ProductDetail.PRO_ID" type="hidden" name="PRO_ID" />
                                <div class="rating-stars">
                                    <input type="radio" name="RAT_Star" value="5" id="star5" required><label for="star5"><i class="fa fa-star"></i></label>
                                    <input type="radio" name="RAT_Star" value="4" id="star4"><label for="star4"><i class="fa fa-star"></i></label>
