                </div>
            </div><!--/category-tab-->
            <!--RELANTED PRODUCTS-->
            <div class="recommended_items">
                <!--recommended_items-->
                <h2 class="title text-center">Recommended items</h2>

                <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="item active">
                            @foreach (var item in products ?? [])
                            {
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="~/images/product-details/@item.PRO_Image" alt="@item.PRO_Name" />
                                                <h2>@item.PRO_Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</h2>
                                                <p>@item.PRO_Name</p>
                                                <button asp-action="Add" asp-controller="Cart" asp-route-id="@item?.PRO_ID" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div><!--/recommended_items-->

        </div>
    </div>
</section>

@section Scripts{
    <script>
        document.getElementById('reviewForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Validate form
            const name = this.querySelector('[name="RAT_Name"]').value;
            const email = this.querySelector('[name="RAT_Email"]').value;
            const comment = this.querySelector('[name="RAT_Comment"]').value;
            const rating = this.querySelector('input[name="RAT_Star"]:checked');

            if (!rating) {
                alert('Please select a rating');
                return;
            }

            if (name.length < 5) {
                alert('Name must be at least 5 characters long');
                return;
            }

            if (email.length < 10) {
                alert('Email must be at least 10 characters long');
                return;
            }

            if (comment.length < 5) {
                alert('Review must be at least 5 characters long');
                return;
            }

            // If validation passes, submit the form
            this.submit();
        });
    </script>
}